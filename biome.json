{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"indentStyle": "space",
		"lineWidth": 100,
        "bracketSpacing": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
        "formatter": {
            "quoteStyle": "single", 
            "lineWidth": 100 
        }
    },
    "json": {
        "formatter": {
            "enabled": false,
            "trailingCommas": "none"
        }
    }
}
